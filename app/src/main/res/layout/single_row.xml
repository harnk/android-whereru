<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/senderNameDateDistanceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:text="dadroid Today, 12:00 AM, 8.2 y"
        android:textColor="#0780FE"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bubble_left_hand"
        android:text="this text will be replaced by actual messages"
        android:layout_below="@+id/senderNameDateDistanceTextView"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        />

</RelativeLayout>